  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all -p sass:watch serve",
    "sass": "echo 'Compiling Sass...' && node-sass assets/sass/main.scss assets/css/main.css",
